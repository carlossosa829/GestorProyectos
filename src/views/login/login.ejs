<%- include('../template/head.ejs') %>
<div class="row ml-0 mr-0 d-flex align-items-md-center position-relative" style="min-height: 100vh;">
    <div style="position: absolute; width: 100%; left: 0; top: 0; transform: rotateZ(180deg)">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#007bff" fill-opacity="1" d="M0,320L1440,160L1440,320L0,320Z"></path></svg>
    </div>
    <div style="position: absolute; width: 100%; left: 0; bottom: 0;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#007bff" fill-opacity="1" d="M0,320L1440,160L1440,320L0,320Z"></path></svg>
    </div>
    <div class="col-md-6 d-flex flex-column align-items-center">
        <img src="/public/img/team.svg" alt="Team" class="img-fluid">
    </div>
    <div class="col-md-6 d-flex flex-column align-items-center">
        <span class="title text-center">INICIAR SESI&Oacute;N</span>
        <form action="<%= `${apiUrl}login` %>" method="POST" class="w-75">
            <div class="form-group">
                <label for="user">Email:</label>
                <div class="input-group">
                    <span class="input-group-text" id="sizing-addon1"><i class="bi bi-person-square"></i></span>
                    <input type="email" class="form-control" id="user"placeholder="Email" name="email" required autofocus>
                </div>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <div class="input-group">
                    <span class="input-group-text" id="sizing-addon1"><i class="bi bi-file-lock2"></i></span>
                    <input type="password" class="form-control" id="password" name="contrasena" required placeholder="Contraseña">
                </div>
            </div>
            <div class="form-group form-check pl-0">
                <label class="form-check-label">
                    <p>Crea una cuenta <a href="/registro">aqu&iacute;</a></p>
                </label>
            </div>
            <div class="form-group bd-danger" id="user-encontrado"></div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block" id="submit-btn" value="Entrar">
            </div>
        </form>
    </div>

</div>

<script type="module" src="/public/js/signIn.js"></script>
<%- include('../template/footer.ejs') %>
