<div class="row d-flex justify-content-around mb-5">
    <% for(let etapa of etapas) { %>
        <div class="col-lg-3 col-md-5 col-sm-11 shadow m-3 d-flex flex-column justify-content-between pl-0 pr-0">
            <img class="card-img-top" src="/public/img/codigo.jpg" alt="Card image cap">
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= etapa.nombre %></h5>
                <p class="card-text"><strong>Estado: </strong><%= etapa.estado %></p>
                <p class="card-text"><strong>Fecha de inicio: </strong><%= etapa.fecha_inicio %></p>
                <p class="card-text"><strong>Fecha de termino: </strong><%= etapa.fecha_fin || '-' %></p>
                <a href="etapas/<%= etapa.id_etapa %>" class="btn btn-primary">Ver etapa</a>
            </div>
        </div>     
    <% } %>
    <% if(etapas.length === 0) { %>
        <p class="title">Este proyecto a√∫n no cuenta con etapas :(</p>
    <% } %>
</div>