<form action="" class="row justify-content-center mx-2" method="POST">
  <div class="col-sm-12 col-md-10">
    <fieldset class="row border mb-4">
      <legend class="font-weight-bold w-auto">Datos generales</legend>
      <input type="hidden" name="coordinador" value="<%= matricula %>">
      <div class="form-group col-md-6 col-sm-12">
        <label for="nombreproyecto" class="font-weight-bold">Nombre del proyecto:</label>
        <input type="text" class="form-control" id="nombreproyecto" placeholder="Introducir nombre del proyecto" name="nombre_proyecto"  required>
      </div>
      <div class="form-group col-md-6 col-sm-12">
        <label for="descripcion" class="font-weight-bold">Descripción:</label>
        <input type="text" class="form-control" id="descripcion" placeholder="Introducir descripción del proyecto" name="descripcion" required>
      </div>
      <div class="form-group col-md-6 col-sm-12">
        <label for="fecha_inicio" class="font-weight-bold">Fecha de Inicio:</label>
        <input type="date" class="form-control" id="fecha_inicio" min="2018-01-01" max="2021-12-31" name="fecha_inicio" required>
      </div>
      <div class="form-group col-md-6 col-sm-12">
        <label for="fecha_limite" class="font-weight-bold">Fecha límite:</label>
        <input type="date" class="form-control" id="fecha_limite" min="2018-01-01" max="2021-12-31" name="fecha_limite" required>
      </div>
      <div class="form-group col-md-6 col-sm-12">
        <label for="materia" class="font-weight-bold">Materia:</label>
        <select class="custom-select" id="materias" name="nrc" required>
          <option value="" disabled selected>Materias</option>
          <% for(let materia of materias) { %>
            <option value="<%= materia.nrc %>"><%= `${materia.nrc} - ${materia.nombre}` %></option>
          <% } %>
        </select>
      </div>
    </fieldset>
    <%- include('./equipo.component.ejs') %>
    <div class="row">
      <button type="submit" class="col btn btn-primary mr-2 my-4">Crear Proyecto</button>
      <a href="/alumno/misProyectos" class="col btn btn-outline-secondary ml-2 my-4">Cancelar</a>
    </div>
  </div>  
</form>