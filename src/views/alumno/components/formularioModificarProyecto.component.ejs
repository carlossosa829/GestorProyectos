<form action="" class="row justify-content-center mx-2" method="POST">
    <div class="col-sm-12 col-md-10">
      <fieldset class="row border mb-4">
          <input type="hidden" name="id_proyecto" value="<%= id_proyecto %>">
        <legend class="font-weight-bold w-auto">Datos generales</legend>
        <div class="form-group col-md-6 col-sm-12">
          <label for="nombreproyecto" class="font-weight-bold">Nombre del proyecto:</label>
          <input type="text" class="form-control" id="nombreproyecto" placeholder="Introducir nombre del proyecto" name="nombre_proyecto" autofocus required>
        </div>
        <div class="form-group col-md-6 col-sm-12">
          <label for="descripcion" class="font-weight-bold">Descripción:</label>
          <input type="text" class="form-control" id="descripcion" placeholder="Introducir descripción del proyecto" name="descripcion" required>
        </div>
        <div class="form-group col-md-6 col-sm-12">
          <label for="fecha_inicio" class="font-weight-bold">Fecha de Inicio:</label>
          <input type="date" class="form-control" id="fecha_inicio" min="2018-01-01" max="2025-12-31" name="fecha_inicio" required>
        </div>
        <div class="form-group col-md-6 col-sm-12">
          <label for="fecha_limite" class="font-weight-bold">Fecha límite:</label>
          <input type="date" class="form-control" id="fecha_limite" min="2018-01-01" max="2025-12-31" name="fecha_limite" required>
        </div>
        <div class="form-group col-md-6 col-sm-12">
            <label for="fecha_fin" class="font-weight-bold">Fecha término:</label>
            <input type="date" class="form-control" id="fecha_fin" min="2018-01-01" max="2025-12-31" name="fecha_fin">
          </div>
      </fieldset>
      <div class="row">
        <button type="submit" class="col btn btn-primary mr-2 my-4">Modificar Proyecto</button>
        <a href="/alumno/misProyectos/<%= id_proyecto %>" class="col btn btn-outline-secondary ml-2 my-4">Cancelar</a>
      </div>
    </div>  
</form>