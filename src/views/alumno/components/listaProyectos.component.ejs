<div class="row d-flex justify-content-around mb-5">
    <% for(let proyecto of proyectos) { %>
        <div class="col-lg-3 col-md-5 col-sm-11 shadow m-3 d-flex flex-column justify-content-between pl-0 pr-0">
            <img class="card-img-top" src="/public/img/codigo.jpg" alt="Card image cap">
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= proyecto.nombre_proyecto %></h5>
                <p class="card-text"><strong>Materia: </strong><%= proyecto.Materium.nombre %></p>
                <p class="card-text"><strong>Evaluador: </strong> <%= `${proyecto.Materium.Profesor.Persona.nombre} ${proyecto.Materium.Profesor.Persona.paterno} ${proyecto.Materium.Profesor.Persona.materno}` %></p>
                <a href="/alumno/misProyectos/<%= proyecto.id_proyecto %>" class="btn btn-primary">Ver proyecto</a>
            </div>
        </div>    
    <% } %>
    <% if(proyectos.length === 0) { %>
        <p class="title">AÃºn no perteneces a un proyecto :(</p>
    <% } %>
</div>